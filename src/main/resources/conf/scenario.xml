			</reputation>

			<!-- Normative -->
			<normativeXML>src/main/resources/conf/consumer.xml</normativeXML>
			<normativeXSD>src/main/resources/conf/emilia.xsd</normativeXSD>
			<individualWeight>0.5</individualWeight>
			<normativeWeight>0.5</normativeWeight>
			<normsSalience>
				<!-- Pay Extortion -->
				<normSalience id="0" compliance="1" violation="0"
					obsCompliance="0" obsViolation="0" punishment="0" sanction="0"
					invocationCompliance="0" invocationViolation="0" />
				<!-- Not Pay Extortion -->
				<normSalience id="1" compliance="1" violation="0"
